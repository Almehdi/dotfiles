#!/bin/zsh


## Predefined Workspace 1
desktop1() {
    	#urxvtc && urxvtc && urxvtc
	urxvtc && urxvtc && urxvtc
}

## Predefined Workspace 2
desktop2() {
	bspc desktop '^2' -l monocle
#	firefox-beta
	firejail --profile=/etc/firejail/firefox.profile --dns=8.8.8.8 --dns=8.8.4.4 --net=enp0s25 firefox-beta
}

## Predefined Workspace 3
desktop3() {
    urxvtc -name URthree && urxvtc -name rtorrent -e firejail --name=rtorrent --net=enp0s25 abduco -A -e '^q' rtorrent /usr/bin/rtorrent &
}

## Predefined Workspace 4
desktop4() {
	#urxvtc -name mutt -e mutt &
	urxvtc -name mutt -e firejail --name=mutt --net=enp0s25 --profile=/etc/firejail/mutt.profile abduco -A -e '^q' mutt /usr/bin/neomutt &
}

desktop5() {
	urxvtc -name weechat -e firejail --name=weechat --profile=/etc/firejail/weechat.profile --net=enp0s25 abduco -A -e '^q' weechat /usr/bin/weechat-curses &
}

desktop6() {
	urxvtc -name rtv -fn "xft:PragmataPro:style=Regular:pixelsize=12, \
	xft:Inconsolata for Powerline:pixelsize=11,xft:SauceCodePro NF,xft:FontAwesome" \
	-e rtv -s linux
	urxvtc -name rtv -fn "xft:PragmataPro:style=Regular:pixelsize=12, \
	xft:Inconsolata for Powerline:pixelsize=11,xft:SauceCodePro NF,xft:FontAwesome" \
	-e rtv -s unixporn
	urxvtc -name rtv -fn "xft:PragmataPro:style=Regular:pixelsize=12, \
	xft:Inconsolata for Powerline:pixelsize=11,xft:SauceCodePro NF,xft:FontAwesome" \
	-e rtv -s archlinux
}

## Madonctl on Workspace 9
desktop9() {
    urxvtc -name madon_notifications -e firejail --name=madon_notifications --net=enp0s25 abduco -A -e '^q' madon_notifications \
    madonctl stream --notifications-only --template-file ~/ansi-notification.tmpl &
    sleep 1 && urxvtc -name madon_home -e firejail --name=madon_home --net=enp0s25 abduco -A -e '^q' madon_home \
    madonctl stream --template-file ~/ansi-status.tmpl &
    sleep 2 && urxvtc -name madon_public -e firejail --name=madon_public --net=enp0s25 abduco -A -e '^q' madon_public \
    madonctl stream public --template-file ~/ansi-status.tmpl &

    sleep 3 && bspc node $(xdo id -n madon_notifications) && bspc node -p south && urxvtc &
    sleep 3 && bspc node $(xdo id -n madon_notifications) && bspc node -p east && urxvtc &
    sleep 4 && bspc node $(xdo id -n madon_public) -z left -200 100 &
}



