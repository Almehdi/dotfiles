##
## bspwm hotkeys
##

## make sxhkd reload its configuration files:
super + shift + Escape
    pkill -USR1 -x sxhkd

## Quit
super + alt + Escape
    wmctrl -c firefox; \
    pkill -2 rtorrent; \
    pkill -2 weechat-curses; \
    sleep 6; \
    pkill panel; \
    bspc quit

## Close window
super + Escape
    bspc node -c

## Toggle layout between monocle and tiled
super + n
    bspc desktop -l next

## if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
    bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused


## Balance (in size) the desktop/workspace
super + b
    bspc desktop -B


### state/flags ###


## Toggle floating or fullscreen
super + {t,p,z,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

## set the node flags
#super + ctrl + {x,y,z}
#	bspc node -g {locked,sticky,private}


#### focus/swap ####


## Cycle the windows west/left.
super + r
    bspc node @/ -R 90 

## Toggle last focused windows or workspace/desktop back-and-forth (ยง,tab)
super + {_,shift +}{Tab}
    bspc {node,desktop} -f last

## Move to previous or next desktop/workspace
alt + shift {1,2}
    bspc desktop -f {prev,next}

## Move selected window to the biggest window
super + m
    bspc node -s biggest

## focus the node in the given direction
super + {_,shift + }{a,s,w,d}
    bspc node -{f,s} {west,south,north,east}

## focus the node for the given path jump
super + {p,b,comma,period,o}
    bspc node -f @{parent,brother,first,second,older}

## focus the next/previous node
super + {_,shift + }c
	bspc node -f {next,prev}

# focus the older or newer node in the focus history
#super + {o,i}
#	bspc wm -h off; \
#	bspc node {older,newer} -f; \
#	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'


#### preselect ####


super + {_,shift + }r
    bspc desktop -R 90

## Circulate leaves of the tree backward or forward
super + {comma,period}
    bspc desktop -C {backward,forward}

## Preselect the direction
super + ctrl + {a,s,w,d}
    bspc node -p {west,south,north,east}

## Cancels the preselection for the focused node
super + ctrl + Escape
    bspc node -p cancel

## Cancel the preselection for the focused desktop
#super + ctrl + shift + space
#    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

## preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}


#### resize tiled/floating ####


## expand the tiled space in the given direction
super + alt + {a,s,w,d}
    bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

## contract the tiled space in the given direction
super + alt + shift + {a,s,w,d}
    bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# move a floating window
#super + {Left,Down,Up,Right}
#    xdo move {-x -20,-y +20,-y -20,-x +20}



#### pointer focus/move/resize ####


## focus
~button1
	bspc pointer -g focus

## start move/resize
super + button{1-3}
    ; bspc pointer -g {move,resize_side,resize_corner}

## end move/resize
super + @button{1-3}
    bspc pointer -u

##
## wm independent hotkeys
##

super + Return
    urxvtc

super + space
#     j4-dmenu-desktop --convert=lowercase "dmenu -fn 'Pragmata Pro-8'"
    dmenu_run -dim 0.85 -dc "#222222"

button8
	xdotool key 115	

button9
	xdotool key 110	

button10
	xdotool key Tab	

ctrl + space
	passmenu

alt + space
	/usr/bin/clipmenu

shift + alt + space
	/usr/bin/vendor_perl/dmenurl

## Media keys
XF86AudioRaiseVolume
	pactl set-sink-volume 0 +5%

XF86AudioLowerVolume
	pactl set-sink-volume 0 -- -5%

XF86AudioMute
	amixer -q set Master toggle

